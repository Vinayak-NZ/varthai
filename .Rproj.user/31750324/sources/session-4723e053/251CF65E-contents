(function () {
  function init() {
    var el = document.getElementById('typed-output');
    if (!el || !window.Typed) return;
    new Typed('#typed-output', {
      strings: ['Varthai'],
      typeSpeed: 120,
      startDelay: 300,
      showCursor: true,
      cursorChar: '|',
      loop: false
    });
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();